


<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1517278862943-719c3d4315b3?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=900&ixid=eyJhcHBfaWQiOjF9&ixlib=rb-1.2.1&q=80&w=1600');">
  <div class="banner-content">

    <h1>Cocktail</h1>
    <p>Cheers champs!</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>


<div class="container cards">

  <% @cocktails.each do |cocktail| %>

    <div>

        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?caipirinha,mojito)">

          <%= link_to cocktail.name, cocktail_path(cocktail) %>

        </div>

    </div>
  <% end %>
</div>



